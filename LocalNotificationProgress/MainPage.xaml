<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalNotificationProgress.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="I need this screen at notification(Xamarin Forms)" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"></Label>
            <Button Clicked="Button_Clicked" Text="Start"></Button>
        </Frame>

        <ProgressBar x:Name="ProgressBar" ProgressColor="Orange" Progress="0" ></ProgressBar>
        <Label x:Name="Label" HorizontalTextAlignment="Center" ></Label>
    </StackLayout>

</ContentPage>
